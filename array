                                                     maximum subarray sum(codeforce)
#include <bits/stdc++.h> 
long long maxSubarraySum(int arr[], int n)
{
    int maxsum = 0;
    int cursum = 0;
    
    for(int i=0; i<arr.length; i++){
        cursum= cursum + arr[i];
        if(cursum>maxsum){
            maxsum= cursum;
        }
        if(cursum<0){
            cursum=0
        }
    }
    return maxsum;  
}

